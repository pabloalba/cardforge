div.modal-lightbox(v-if="lightboxOpen")
  form(@submit="onSubmit")
    div.modal
      div.art
        include ../../images/decks.svg
      h3 Create new deck
      div.input-text
        label DECK NAME
        input(type="text" v-model.trim="name")
      div.row-input
        div.input-text
          label CARD SIZE
          select
            option Poker (63 x 88 mm)
            option Poker (63 x 88 mm)
            option Poker (63 x 88 mm)
            option Poker (63 x 88 mm)
        div.input-text
          label DECK ORIENTATION
          select
            option Portrait
            option Landscape
      div.modal-buttons
        a(@click="onCancelClicked").cancel-link CANCEL
        button(type="submit" value="CREATE DECK" :class="{disabled: isNameEmpty}").btn-primary CREATE DECK
      //- corners
      div.corner.top-left
        include ../../images/corner.svg
      div.corner.top-right
        include ../../images/corner.svg
      div.corner.bottom-left
        include ../../images/corner.svg
      div.corner.bottom-right
        include ../../images/corner.svg
      div.corner.bottom
        include ../../images/marker.svg
