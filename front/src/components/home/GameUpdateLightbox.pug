div.modal-lightbox(v-bind:class="{hide:isHidden}")
  form(@submit="onSubmit")
    div.modal
      div.art
        include ../../images/games.svg
      h3 Edit game
      div.input-text
        label GAME NAME
        input(type="text" v-model.trim="name")
      div.modal-buttons
        a(@click="onCancelClicked").cancel-link CANCEL
        button(type="submit" :class="{disabled: isNameEmpty}").btn-primary UPDATE GAME
      //- corners
      div.corner.top-left
        include ../../images/corner.svg
      div.corner.top-right
        include ../../images/corner.svg
      div.corner.bottom-left
        include ../../images/corner.svg
      div.corner.bottom-right
        include ../../images/corner.svg
      div.corner.bottom
        include ../../images/marker.svg
